source "https://rubygems.org"
git_source(:github) { |repo| "https://github.com/#{repo}.git" }

ruby "2.6.2"

# Bundle edge Rails instead: gem 'rails', github: 'rails/rails'
gem "rails", "~> 6.0.0.beta3"

# Use postgresql as the database for Active Record
gem "pg", ">= 0.18", "< 2.0"

# Use Puma as the app server
gem "puma" # , '~> 3.11'

# Use ActiveModel has_secure_password
gem "bcrypt", "~> 3.1.7"

# Reduces boot times through caching; required in config/boot.rb
gem "bootsnap", ">= 1.4.1", require: false

# Use Rack CORS for handling Cross-Origin Resource Sharing (CORS), making cross-origin AJAX possible
gem "rack-cors"

# Active Model Serializer (JSON serialization of ActiveModel)
# Using this branch fixes a deprecation warning of rails 6,
# see https://github.com/rails-api/active_model_serializers/pull/2319
gem "active_model_serializers", github: "rails-api/active_model_serializers", branch: "0-10-stable"

# Optimized JSON (http://www.ohler.com/oj/)
gem "oj"

# Paginator for Ruby webapps (https://github.com/kaminari/kaminari)
gem "kaminari"

# Slugging and permalink plugins for ActiveRecord (https://github.com/norman/friendly_id)
gem "friendly_id"

# Authorization (https://github.com/varvet/pundit)
gem "pundit"

# Efficient bulk inserts with ActiveRecord (https://github.com/jamis/bulk_insert)
gem "bulk_insert"

group :development, :test do
  gem "rspec-rails"
  gem "guard"
  gem "guard-rspec"
  gem "spring-commands-rspec"
  gem "pry-byebug"
  gem "pry-doc"
  gem "awesome_print"
  gem "factory_bot_rails"
  gem "faker"
end

group :test do
  # Code coverage
  gem "simplecov-json", require: false
  gem "simplecov", require: false
  gem "webmock", require: false
  gem "timecop"
  gem "db-query-matchers"
end

group :development do
  gem "listen", ">= 3.0.5", "< 3.2"
  # Spring speeds up development by keeping your application running in the background. Read more: https://github.com/rails/spring
  gem "spring"
  gem "spring-watcher-listen", "~> 2.0.0"
  # CLI tools for development
  gem "rubocop"
  gem "rubocop-performance"
  gem "rubocop-rspec"
  gem "annotate"
  gem "pry-rails"
end

# Windows does not include zoneinfo files, so bundle the tzinfo-data gem
gem "tzinfo-data", platforms: [:mingw, :mswin, :x64_mingw, :jruby]
